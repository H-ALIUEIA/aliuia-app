<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/updatetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Υπάρχει Νέα Εκδοση" />

    <Button
        android:id="@+id/installbutton"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Εγκατασταση"
        app:layout_constraintTop_toBottomOf="@id/updatetext" />

    <Button
        android:id="@+id/notinterestedbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Δεν Ενδιαφερομαι"
        app:layout_constraintTop_toBottomOf="@id/installbutton" />

    <Button
        android:id="@+id/donotshowagainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Μην το ξαναδειξεις"
        app:layout_constraintTop_toBottomOf="@id/notinterestedbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>
